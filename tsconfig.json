{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES2022",
        "sourceMap": true,
        "declaration": true,
        "outDir": "dist",
        "strict": true,
        "noImplicitAny": true,
        "paths": {},
        "checkJs": true,
        "isolatedModules": true,
        "esModuleInterop": true
        // "rootDir": ".",
    },
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}